<Window x:Class="ELMFS.Displays.Trending"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ELMFS.Displays"
        mc:Ignorable="d"
        Title="Trending List" Height="400" Width="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <!--ListBox-->
        <StackPanel Grid.Column="0">
            <ListBox Margin="10,10,10,10" Width="230" Height="350" ItemsSource="{Binding}" ScrollViewer.VerticalScrollBarVisibility="Visible"></ListBox>
        </StackPanel>

        <!--Button-->
        <StackPanel Grid.Column="1">
            <Button x:Name="btnExit" Width="80" Height="35" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,5,5" Click="btnExit_Click">
                Exit
            </Button>
        </StackPanel>
    </Grid>
</Window>
